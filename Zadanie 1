#include <stdio.h>

int main() {
  // Создаем массив для 10 красных шариков
  int red_balls[10];

  // создается переменная size в котором делится общее размер массива в байтах на размер 1 элемента из массива
  int size = sizeof(red_balls) / sizeof(red_balls[0]);

  // вывод результата
  printf("В коробке red_balls помещается %d шариков.\n", size);
  return 0;
}
